@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    @RenderSection("Styles", required: false)
    <style>
        :root{
            --bg: #F7F8FA;
            --card: #FFFFFF;
            --text: #111827;
            --muted: #6B7280;
            --primary: #0B1220;
            --accent: #16A34A;
            --border: #E5E7EB;
            --sidebar-bg: #FFFFFF;
            --sidebar-width: 280px;
        }
        
        body { 
            background: var(--bg); 
            color: var(--text);
            overflow-x: hidden;
        }
        
        .admin-container {
            display: flex;
            min-height: 100vh;
        }
        
        /* Left Sidebar */
        .admin-sidebar {
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            border-right: 1px solid var(--border);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 2px 0 10px rgba(0,0,0,0.05);
        }
        
        .admin-sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border);
            background: var(--primary);
            color: white;
        }
        
        .admin-sidebar-header img {
            max-height: 40px;
            width: auto;
        }
        
        .admin-sidebar-header h4 {
            margin: 0;
            font-weight: 700;
            font-size: 1.25rem;
        }
        
        .admin-sidebar-nav {
            padding: 1rem 0;
        }
        
        .admin-nav-item {
            margin: 0.25rem 0.75rem;
        }
        
        .admin-nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: var(--text);
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.2s;
            font-weight: 500;
        }
        
        .admin-nav-link:hover {
            background: var(--bg);
            color: var(--primary);
        }
        
        .admin-nav-link.active {
            background: var(--primary);
            color: white;
        }
        
        .admin-nav-link i {
            width: 20px;
            text-align: center;
        }
        
        .admin-nav-section {
            padding: 0.5rem 0.75rem;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            color: var(--muted);
            letter-spacing: 0.5px;
        }
        
        /* Right Content Area */
        .admin-content {
            margin-left: var(--sidebar-width);
            flex: 1;
            padding: 2rem;
            min-height: 100vh;
        }
        
        .app-card{ 
            background: var(--card); 
            border: 1px solid var(--border); 
            border-radius: 16px; 
            box-shadow: 0 10px 25px rgba(17,24,39,.05); 
        }
        
        .table thead th{ 
            color: var(--muted); 
            font-weight:600; 
            border-bottom: 1px solid var(--border); 
        }
        
        .table td{ 
            vertical-align: middle; 
        }
        
        .btn-primary{ 
            background: var(--primary); 
            border-color: var(--primary); 
        }
        
        .btn-primary:hover{ 
            filter: brightness(.95); 
        }
        
        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .admin-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s;
            }
            
            .admin-sidebar.show {
                transform: translateX(0);
            }
            
            .admin-content {
                margin-left: 0;
            }
            
            .sidebar-toggle {
                display: block;
            }
        }
        
        .sidebar-toggle {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1001;
            background: var(--primary);
            color: white;
            border: none;
            padding: 0.5rem;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Left Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="admin-sidebar-header">
                <div class="d-flex align-items-center gap-2 mb-2">
                    <img src="~/images/logo.png" alt="MealPrep Logo" />
                    <h4 class="mb-0">Admin Panel</h4>
                </div>
                <small class="text-white-50">MealPrep Management</small>
            </div>
            
            <nav class="admin-sidebar-nav">
                <div class="admin-nav-section">Dashboard</div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                       asp-controller="Admin" asp-action="Index" data-load="dashboard">
                        <i class="bi bi-speedometer2"></i>
                        <span>Tổng Quan</span>
                    </a>
                </div>
                
                <div class="admin-nav-section mt-4">Quản Lý</div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminUsers" ? "active" : "")" 
                       asp-controller="AdminUsers" asp-action="Index" data-load="users">
                        <i class="bi bi-people"></i>
                        <span>Người Dùng</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminMeals" ? "active" : "")" 
                       asp-controller="AdminMeals" asp-action="Index" data-load="meals">
                        <i class="bi bi-egg-fried"></i>
                        <span>Món Ăn</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminSubscriptions" ? "active" : "")" 
                       asp-controller="AdminSubscriptions" asp-action="Index" data-load="subscriptions">
                        <i class="bi bi-calendar-check"></i>
                        <span>Đăng Ký</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminPlans" ? "active" : "")" 
                       asp-controller="AdminPlans" asp-action="Index" data-load="plans">
                        <i class="bi bi-box-seam"></i>
                        <span>Gói Dịch Vụ</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminDeliveryOrders" ? "active" : "")" 
                       asp-controller="AdminDeliveryOrders" asp-action="Index" data-load="deliveries">
                        <i class="bi bi-truck"></i>
                        <span>Đơn Giao Hàng</span>
                    </a>
                </div>
                
                <div class="admin-nav-section mt-4">Vận Hành</div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "DeliveryProcessing" ? "active" : "")" 
                       asp-controller="DeliveryProcessing" asp-action="Index">
                        <i class="bi bi-boxes"></i>
                        <span>Xử Lý Giao Hàng</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MealFeedback" && ViewContext.RouteData.Values["Action"]?.ToString() == "AdminReport" ? "active" : "")" 
                       asp-controller="MealFeedback" asp-action="AdminReport">
                        <i class="bi bi-star-half"></i>
                        <span>Báo Cáo Feedback</span>
                    </a>
                </div>
                
                <div class="admin-nav-section mt-4">Hệ Thống</div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-controller="Auth" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Đăng Xuất</span>
                    </a>
                </div>
            </nav>
        </aside>
        
        <!-- Right Content Area -->
        <main class="admin-content">
            <button class="sidebar-toggle" id="sidebarToggle" onclick="toggleSidebar()">
                <i class="bi bi-list"></i>
            </button>
            
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function toggleSidebar() {
            document.getElementById('adminSidebar').classList.toggle('show');
        }
        
        // Handle navigation clicks - load content in right side via AJAX
        document.querySelectorAll('[data-load]').forEach(link => {
            link.addEventListener('click', function(e) {
                // Update active state
                document.querySelectorAll('.admin-nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
