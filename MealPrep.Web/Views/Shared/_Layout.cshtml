@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MealPrep</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    @RenderSection("Styles", required: false)
    <style>
        :root{
            --bg: #F7F8FA;
            --card: #FFFFFF;
            --text: #111827;
            --muted: #6B7280;
            --primary: #0B1220;      /* sang */
            --accent: #16A34A;       /* healthy */
            --border: #E5E7EB;
        }
        body { background: var(--bg); color: var(--text); }
        .app-navbar { background: rgba(255,255,255,.85); border-bottom: 1px solid var(--border); backdrop-filter: blur(10px); }
        .brand-badge{ width: 34px; height: 34px; border-radius: 10px; background: var(--primary); display:inline-flex; align-items:center; justify-content:center; color:white; font-weight:700; }
        .app-card{ background: var(--card); border: 1px solid var(--border); border-radius: 16px; box-shadow: 0 10px 25px rgba(17,24,39,.05); }
        .kpi-title{ color: var(--muted); font-size: .85rem; }
        .kpi-value{ font-size: 1.35rem; font-weight: 700; }
        .chip{ display:inline-flex; align-items:center; gap:.35rem; padding:.25rem .6rem; border-radius: 999px; background:#ECFDF5; color: #065F46; border:1px solid #A7F3D0; font-size:.8rem; }
        .btn-primary{ background: var(--primary); border-color: var(--primary); }
        .btn-primary:hover{ filter: brightness(.95); }
        .link-muted{ color: var(--muted); text-decoration:none; }
        .link-muted:hover{ color: var(--text); }
        .meal-thumb{ width: 100%; height: 130px; border-radius: 14px; background: linear-gradient(135deg, #111827, #374151); }
        .meal-meta{ color: var(--muted); font-size:.85rem; }
        .table thead th{ color: var(--muted); font-weight:600; border-bottom: 1px solid var(--border); }
        .table td{ vertical-align: middle; }
        .nav-link.active { color: var(--primary) !important; font-weight: 600; border-bottom: 2px solid var(--primary); }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg app-navbar sticky-top">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Dashboard" asp-action="Index">
            <img src="~/images/logo.png" alt="MealPrep Logo" style="height: 32px; width: auto;" />
            <span class="fw-semibold">MealPrep</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="nav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Shipper") && !User.IsInRole("Admin"))
                    {
                        <!-- Shipper Navigation -->
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ShipperDashboard" ? "active" : "")" asp-controller="ShipperDashboard" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ShipperDelivery" ? "active" : "")" asp-controller="ShipperDelivery" asp-action="Index">Đơn Hàng</a></li>
                    }
                    else
                    {
                        <!-- User Navigation -->
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index">Bảng Điều Khiển</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Subscription" ? "active" : "")" asp-controller="Subscription" asp-action="Index">Đăng Ký</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Meal" ? "active" : "")" asp-controller="Meal" asp-action="Index">Món Ăn</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MealFeedback" ? "active" : "")" asp-controller="MealFeedback" asp-action="Index">Đánh Giá</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "NutritionLog" ? "active" : "")" asp-controller="NutritionLog" asp-action="Index">Dinh Dưỡng</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "UserSubscriptions" ? "active" : "")" asp-controller="UserSubscriptions" asp-action="Index">Gói Đăng Ký</a></li>
                    }
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")" asp-controller="Admin" asp-action="Index">Admin</a></li>
                    }
                    
                    @if (User.IsInRole("Shipper") && User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ShipperDashboard" ? "active" : "")" asp-controller="ShipperDashboard" asp-action="Index">Shipper</a></li>
                    }
                }
                else
                {
                    <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Giới Thiệu</a></li>
                }
            </ul>

            <div class="d-flex align-items-center gap-3">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <span class="fw-semibold">@User.FindFirstValue(ClaimTypes.Name)</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">@User.FindFirstValue(ClaimTypes.Email)</h6></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (User.IsInRole("Shipper") && !User.IsInRole("Admin"))
                            {
                                <!-- Shipper Menu -->
                                <li><a class="dropdown-item" asp-controller="ShipperDashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="ShipperDelivery" asp-action="Index">
                                    <i class="bi bi-truck"></i> Đơn Hàng
                                </a></li>
                            }
                            else
                            {
                                <!-- User Menu -->
                                <li><a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                                    <i class="bi bi-person"></i> Hồ Sơ
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Subscription" asp-action="Index">
                                    <i class="bi bi-calendar-check"></i> Đăng Ký Gói
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="NutritionLog" asp-action="Index">
                                    <i class="bi bi-heart-pulse"></i> Nhật Ký Dinh Dưỡng
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="MealFeedback" asp-action="Index">
                                    <i class="bi bi-chat-left-text"></i> Đánh Giá Món Ăn
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="MealFeedback" asp-action="MySummary">
                                    <i class="bi bi-graph-up"></i> Thống Kê Feedback
                                </a></li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-check"></i> Admin Panel
                                </a></li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Đăng Xuất
                            </a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-sm btn-outline-secondary me-2" asp-controller="Auth" asp-action="Login">Đăng Nhập</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Auth" asp-action="Register">Đăng Ký</a>
                }
            </div>
        </div>
    </div>
</nav>

<main class="container my-4">
    @RenderBody()
</main>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
