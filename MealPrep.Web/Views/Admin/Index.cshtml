@model MealPrep.Web.ViewModels.AdminDashboardVm

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div>
    <!-- Header -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">Tổng Quan Hệ Thống</h2>
        <p class="text-muted mb-0">Thống kê và phân tích dữ liệu</p>
    </div>

    <!-- Quick Stats (KPI Cards) -->
    <div class="row g-3 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="app-card p-4 h-100 border-start border-4" style="border-color: #6B7280 !important;">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small mb-1">Doanh Thu Hôm Nay</div>
                        <div class="h3 fw-bold mb-0" style="color: #111827;">@Model.TodayRevenue.ToString("N0")₫</div>
                    </div>
                    <div class="p-3 rounded-circle" style="background: #F3F4F6;">
                        <i class="bi bi-cash-stack" style="font-size: 1.5rem; color: #6B7280;"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="app-card p-4 h-100 border-start border-4" style="border-color: #6B7280 !important;">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small mb-1">Active Subscribers</div>
                        <div class="h3 fw-bold mb-0" style="color: #111827;">@Model.ActiveSubscribers</div>
                    </div>
                    <div class="p-3 rounded-circle" style="background: #F3F4F6;">
                        <i class="bi bi-people-fill" style="font-size: 1.5rem; color: #6B7280;"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="app-card p-4 h-100 border-start border-4" style="border-color: #6B7280 !important;">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small mb-1">Đơn Cần Giao Ngày Mai</div>
                        <div class="h3 fw-bold mb-0" style="color: #111827;">@Model.TomorrowOrders</div>
                    </div>
                    <div class="p-3 rounded-circle" style="background: #F3F4F6;">
                        <i class="bi bi-truck" style="font-size: 1.5rem; color: #6B7280;"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="app-card p-4 h-100 border-start border-4" style="border-color: #6B7280 !important;">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small mb-1">Thanh Toán Thất Bại</div>
                        <div class="h3 fw-bold mb-0" style="color: #111827;">@Model.FailedPayments.Count</div>
                    </div>
                    <div class="p-3 rounded-circle" style="background: #F3F4F6;">
                        <i class="bi bi-x-circle" style="font-size: 1.5rem; color: #6B7280;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="row g-4 mb-4">
        <!-- Monthly Revenue Summary -->
        <div class="col-lg-6">
            <div class="app-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-semibold mb-0">Doanh Thu Trong Tháng</h5>
                    <span class="text-muted small">@DateTime.Now.ToString("MMMM yyyy", new System.Globalization.CultureInfo("vi-VN"))</span>
                </div>
                @if (Model.MonthlyRevenue != null && Model.MonthlyRevenue.Any())
                {
                    var totalMonthlyRevenue = Model.MonthlyRevenue.Sum(r => r.Revenue);
                    var daysWithRevenue = Model.MonthlyRevenue.Count(r => r.Revenue > 0);
                    var avgDailyRevenue = daysWithRevenue > 0 ? totalMonthlyRevenue / daysWithRevenue : 0;
                    var maxDailyRevenue = Model.MonthlyRevenue.Max(r => r.Revenue);
                    var maxDay = Model.MonthlyRevenue.FirstOrDefault(r => r.Revenue == maxDailyRevenue);
                    
                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <div class="text-muted small">Tổng Doanh Thu</div>
                            <div class="h4 fw-bold">@totalMonthlyRevenue.ToString("N0")₫</div>
                        </div>
                        <div class="col-6">
                            <div class="text-muted small">Trung Bình Mỗi Ngày</div>
                            <div class="h4 fw-bold">@avgDailyRevenue.ToString("N0")₫</div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="text-muted small fw-semibold">Ngày</th>
                                    <th class="text-muted small fw-semibold text-end">Doanh Thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var revenue in Model.MonthlyRevenue.OrderByDescending(r => r.Date).Take(10))
                                {
                                    <tr>
                                        <td class="small">@revenue.Date.ToString("dd/MM/yyyy")</td>
                                        <td class="small text-end fw-semibold">@revenue.Revenue.ToString("N0")₫</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.MonthlyRevenue.Count > 10)
                    {
                        <small class="text-muted d-block mt-2">Hiển thị 10 ngày gần nhất</small>
                    }
                }
                else
                {
                    <p class="text-muted text-center py-4 mb-0">Chưa có dữ liệu doanh thu trong tháng</p>
                }
            </div>
        </div>

        <!-- Orders Status Distribution -->
        <div class="col-lg-6">
            <div class="app-card p-4">
                <h5 class="fw-semibold mb-3">Phân Bố Trạng Thái Đơn Hàng</h5>
                @if (Model.OrdersStatusDistribution != null && Model.OrdersStatusDistribution.Any())
                {
                    var totalOrders = Model.OrdersStatusDistribution.Values.Sum();
                    var statusLabels = new Dictionary<string, string>
                    {
                        { "Planned", "Đã Lên Lịch" },
                        { "Preparing", "Đang Chuẩn Bị" },
                        { "Delivering", "Đang Giao" },
                        { "Delivered", "Đã Giao" },
                        { "Cancelled", "Đã Hủy" }
                    };
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Tổng số đơn hàng</span>
                            <span class="h5 fw-bold mb-0">@totalOrders</span>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="text-muted small fw-semibold">Trạng Thái</th>
                                    <th class="text-muted small fw-semibold text-end">Số Lượng</th>
                                    <th class="text-muted small fw-semibold text-end">Tỷ Lệ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var status in Model.OrdersStatusDistribution.OrderByDescending(s => s.Value))
                                {
                                    var percentage = totalOrders > 0 ? (status.Value * 100.0m / totalOrders) : 0;
                                    var label = statusLabels.ContainsKey(status.Key) ? statusLabels[status.Key] : status.Key;
                                    
                                    <tr>
                                        <td class="small">@label</td>
                                        <td class="small text-end fw-semibold">@status.Value</td>
                                        <td class="small text-end">
                                            <span class="badge rounded-pill" style="background: #E5E7EB; color: #111827;">
                                                @percentage.ToString("F1")%
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4 mb-0">Chưa có đơn hàng nào để thống kê</p>
                }
            </div>
        </div>
    </div>

    <!-- Additional Statistics -->
    <div class="row g-4 mb-4">
        <!-- User Segmentation -->
        <div class="col-lg-4">
            <div class="app-card p-4">
                <h5 class="fw-semibold mb-3">Phân Loại Khách Hàng</h5>
                @if (Model.UserSegmentationByGoal != null && Model.UserSegmentationByGoal.Any())
                {
                    var totalUsers = Model.UserSegmentationByGoal.Values.Sum();
                    var goalLabels = new Dictionary<string, string>
                    {
                        { "Maintain", "Duy Trì" },
                        { "FatLoss", "Giảm Cân" },
                        { "MuscleGain", "Tăng Cơ" }
                    };
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Tổng số hồ sơ</span>
                            <span class="h5 fw-bold mb-0">@totalUsers</span>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="text-muted small fw-semibold">Mục Tiêu</th>
                                    <th class="text-muted small fw-semibold text-end">Số Lượng</th>
                                    <th class="text-muted small fw-semibold text-end">Tỷ Lệ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var goal in Model.UserSegmentationByGoal.OrderByDescending(g => g.Value))
                                {
                                    var percentage = totalUsers > 0 ? (goal.Value * 100.0m / totalUsers) : 0;
                                    var label = goalLabels.ContainsKey(goal.Key) ? goalLabels[goal.Key] : goal.Key;
                                    
                                    <tr>
                                        <td class="small">@label</td>
                                        <td class="small text-end fw-semibold">@goal.Value</td>
                                        <td class="small text-end">
                                            <span class="badge rounded-pill" style="background: #E5E7EB; color: #111827;">
                                                @percentage.ToString("F1")%
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4 mb-0">Chưa có hồ sơ dinh dưỡng nào để phân loại</p>
                }
            </div>
        </div>

        <!-- Top Disliked Meals -->
        <div class="col-lg-4">
            <div class="app-card p-4">
                <h5 class="fw-semibold mb-3">Top Món Bị Ghét Nhất</h5>
                @if (Model.TopDislikedMeals != null && Model.TopDislikedMeals.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="text-muted small fw-semibold">Món Ăn</th>
                                    <th class="text-muted small fw-semibold text-end">Số Người</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var meal in Model.TopDislikedMeals.Take(5))
                                {
                                    <tr>
                                        <td class="small">@meal.MealName</td>
                                        <td class="small text-end fw-semibold">
                                            <span class="badge rounded-pill" style="background: #E5E7EB; color: #111827;">
                                                @meal.DislikeCount
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4 mb-0">Chưa có dữ liệu món bị ghét</p>
                }
            </div>
        </div>

        <!-- Top Allergies -->
        <div class="col-lg-4">
            <div class="app-card p-4">
                <h5 class="fw-semibold mb-3">Top Dị Ứng</h5>
                @if (Model.TopAllergies != null && Model.TopAllergies.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="text-muted small fw-semibold">Loại Dị Ứng</th>
                                    <th class="text-muted small fw-semibold text-end">Số Người</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var allergy in Model.TopAllergies.Take(5))
                                {
                                    <tr>
                                        <td class="small">@allergy.AllergyName</td>
                                        <td class="small text-end fw-semibold">
                                            <span class="badge rounded-pill" style="background: #E5E7EB; color: #111827;">
                                                @allergy.UserCount
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4 mb-0">Chưa có dữ liệu dị ứng</p>
                }
            </div>
        </div>
    </div>

    <!-- Data Tables -->
    <div class="row g-4">
        <!-- At-Risk Subscriptions -->
        <div class="col-lg-6">
            <div class="app-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-semibold mb-0">Subscriptions Sắp Hết Hạn</h5>
                    <span class="badge rounded-pill" style="background: #E5E7EB; color: #111827;">@Model.AtRiskSubscriptions.Count</span>
                </div>
                @if (Model.AtRiskSubscriptions.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="text-muted small fw-semibold">Khách Hàng</th>
                                    <th class="text-muted small fw-semibold">Hết Hạn</th>
                                    <th class="text-muted small fw-semibold">Còn Lại</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sub in Model.AtRiskSubscriptions)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold small">@sub.CustomerName</div>
                                            <small class="text-muted">@sub.CustomerEmail</small>
                                        </td>
                                        <td class="small">@sub.EndDate?.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge rounded-pill" style="background: #FEF3C7; color: #92400E;">
                                                @sub.DaysUntilExpiry ngày
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3 mb-0 small">Không có subscription nào sắp hết hạn</p>
                }
            </div>
        </div>

        <!-- Failed Payments -->
        <div class="col-lg-6">
            <div class="app-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-semibold mb-0">Thanh Toán Thất Bại</h5>
                    <span class="badge rounded-pill" style="background: #E5E7EB; color: #111827;">@Model.FailedPayments.Count</span>
                </div>
                @if (Model.FailedPayments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="text-muted small fw-semibold">Mã</th>
                                    <th class="text-muted small fw-semibold">Khách Hàng</th>
                                    <th class="text-muted small fw-semibold">Số Tiền</th>
                                    <th class="text-muted small fw-semibold">Ngày</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.FailedPayments)
                                {
                                    <tr>
                                        <td><code class="small">@payment.PaymentCode</code></td>
                                        <td>
                                            <div class="fw-semibold small">@payment.CustomerName</div>
                                            <small class="text-muted">@payment.CustomerEmail</small>
                                        </td>
                                        <td class="small">@payment.Amount.ToString("N0")₫</td>
                                        <td class="small">@payment.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3 mb-0 small">Không có thanh toán thất bại</p>
                }
            </div>
        </div>
    </div>

    <!-- Revenue Detail Chart Section -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="app-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-semibold mb-0">Biểu Đồ Doanh Thu Chi Tiết</h5>
                    <div class="d-flex gap-2">
                        <select id="revenueYear" class="form-select form-select-sm" style="width: auto;">
                            @{
                                var currentYear = DateTime.Now.Year;
                                for (int year = currentYear; year >= currentYear - 2; year--)
                                {
                                    var isSelected = year == currentYear ? "selected" : "";
                                    <option value="@year" selected="@isSelected">@year</option>
                                }
                            }
                        </select>
                        <select id="revenueMonth" class="form-select form-select-sm" style="width: auto;">
                            @{
                                var currentMonth = DateTime.Now.Month;
                                var monthNames = new[] { "Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", 
                                                         "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12" };
                                for (int month = 1; month <= 12; month++)
                                {
                                    var isSelected = month == currentMonth ? "selected" : "";
                                    <option value="@month" selected="@isSelected">@monthNames[month - 1]</option>
                                }
                            }
                        </select>
                        <button type="button" id="loadRevenueBtn" class="btn btn-sm btn-primary">
                            <i class="bi bi-search"></i> Xem
                        </button>
                    </div>
                </div>
                
                <div id="revenueChartContainer">
                    <canvas id="revenueDetailChart" height="60"></canvas>
                </div>
                
                <div id="revenueChartLoading" class="text-center py-4" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                    <p class="text-muted mt-2 mb-0">Đang tải dữ liệu...</p>
                </div>
                
                <div id="revenueChartError" class="alert alert-info" style="display: none;">
                    <i class="bi bi-info-circle"></i> <span id="revenueChartErrorMessage"></span>
                </div>
                
                <div id="revenueChartEmpty" class="text-center py-5" style="display: none;">
                    <i class="bi bi-bar-chart" style="font-size: 3rem; color: #D1D5DB;"></i>
                    <p class="text-muted mt-3 mb-0">Chưa có dữ liệu doanh thu cho tháng này</p>
                    <small class="text-muted">Vui lòng chọn tháng khác hoặc kiểm tra lại dữ liệu thanh toán</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        let revenueChart = null;

        function loadRevenueChart(year, month) {
            const loadingDiv = document.getElementById('revenueChartLoading');
            const errorDiv = document.getElementById('revenueChartError');
            const chartContainer = document.getElementById('revenueChartContainer');
            const canvas = document.getElementById('revenueDetailChart');
            
            // Show loading
            loadingDiv.style.display = 'block';
            errorDiv.style.display = 'none';
            chartContainer.style.display = 'none';
            
            // Fetch data
            const url = `@Url.Action("GetRevenueByMonth", "Admin")?year=${year}&month=${month}`;
            console.log('Fetching revenue data from:', url);
            
            fetch(url)
                .then(response => {
                    console.log('Response status:', response.status);
                    if (!response.ok) {
                        return response.json().then(err => {
                            throw new Error(err.error || `HTTP ${response.status}: ${response.statusText}`);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Received data:', data);
                    
                    // Check if data has error property
                    if (data && data.error) {
                        throw new Error(data.error);
                    }
                    
                    // Check if data is array
                    if (!Array.isArray(data)) {
                        throw new Error('Dữ liệu trả về không đúng định dạng');
                    }
                    
                    // Check if data is empty
                    if (data.length === 0) {
                        loadingDiv.style.display = 'none';
                        chartContainer.style.display = 'none';
                        errorDiv.style.display = 'none';
                        const emptyDiv = document.getElementById('revenueChartEmpty');
                        if (emptyDiv) {
                            emptyDiv.style.display = 'block';
                        }
                        return;
                    }
                    
                    // Process data
                    const processedData = data.map(d => {
                        let dateStr;
                        if (typeof d.Date === 'string') {
                            dateStr = d.Date;
                        } else if (d.Date && typeof d.Date === 'object') {
                            dateStr = `${d.Date.year}-${String(d.Date.month).padStart(2, '0')}-${String(d.Date.day).padStart(2, '0')}`;
                        } else {
                            console.error('Invalid date format:', d.Date);
                            return null;
                        }
                        
                        if (!dateStr) return null;
                        
                        const [y, m, day] = dateStr.split('-').map(Number);
                        const revenue = parseFloat(d.Revenue) || 0;
                        
                        return {
                            day: day,
                            revenue: revenue,
                            dateStr: dateStr
                        };
                    }).filter(d => d !== null);
                    
                    // Sort by day
                    processedData.sort((a, b) => a.day - b.day);
                    
                    const labels = processedData.map(d => d.day);
                    const revenues = processedData.map(d => d.revenue);
                    const totalRevenue = revenues.reduce((a, b) => a + b, 0);
                    const maxRevenue = Math.max(...revenues, 0);
                    
                    console.log('Processed data:', {
                        labels: labels,
                        revenues: revenues,
                        totalRevenue: totalRevenue,
                        maxRevenue: maxRevenue,
                        dataLength: processedData.length
                    });
                    
                    // Check if all revenues are zero
                    if (totalRevenue === 0) {
                        loadingDiv.style.display = 'none';
                        chartContainer.style.display = 'none';
                        errorDiv.style.display = 'none';
                        const emptyDiv = document.getElementById('revenueChartEmpty');
                        if (emptyDiv) {
                            emptyDiv.style.display = 'block';
                        }
                        return;
                    }
                    
                    loadingDiv.style.display = 'none';
                    chartContainer.style.display = 'block';
                    const emptyDiv = document.getElementById('revenueChartEmpty');
                    if (emptyDiv) {
                        emptyDiv.style.display = 'none';
                    }
                    errorDiv.style.display = 'none';
                    
                    // Destroy existing chart if exists
                    if (revenueChart) {
                        revenueChart.destroy();
                    }
                    
                    // Create new chart
                    const ctx = canvas.getContext('2d');
                    revenueChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Doanh Thu (₫)',
                                data: revenues,
                                backgroundColor: 'rgba(107, 114, 128, 0.8)',
                                borderColor: 'rgba(107, 114, 128, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: true,
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return 'Doanh thu: ' + context.parsed.y.toLocaleString('vi-VN') + '₫';
                                        }
                                    }
                                },
                                title: {
                                    display: true,
                                    text: `Tổng doanh thu: ${totalRevenue.toLocaleString('vi-VN')}₫`,
                                    font: { size: 14, weight: 'bold' }
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: maxRevenue > 0 ? Math.ceil(maxRevenue * 1.1 / 100000) * 100000 : 1000000,
                                    ticks: {
                                        callback: function(value) {
                                            return value.toLocaleString('vi-VN') + '₫';
                                        },
                                        stepSize: maxRevenue > 0 ? Math.ceil(maxRevenue / 5 / 100000) * 100000 : 200000
                                    }
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Ngày trong tháng'
                                    },
                                    ticks: {
                                        stepSize: 1
                                    }
                                }
                            }
                        }
                    });
                })
                .catch(error => {
                    console.error('Error loading revenue chart:', error);
                    loadingDiv.style.display = 'none';
                    chartContainer.style.display = 'none';
                    const emptyDiv = document.getElementById('revenueChartEmpty');
                    if (emptyDiv) {
                        emptyDiv.style.display = 'none';
                    }
                    errorDiv.style.display = 'block';
                    const errorMsg = document.getElementById('revenueChartErrorMessage');
                    if (errorMsg) {
                        errorMsg.textContent = error.message || 'Không thể tải dữ liệu doanh thu. Vui lòng thử lại.';
                    }
                });
        }

        // Load initial chart
        document.addEventListener('DOMContentLoaded', function() {
            const yearSelect = document.getElementById('revenueYear');
            const monthSelect = document.getElementById('revenueMonth');
            const loadBtn = document.getElementById('loadRevenueBtn');
            
            // Load current month/year on page load
            loadRevenueChart(yearSelect.value, monthSelect.value);
            
            // Load on button click
            loadBtn.addEventListener('click', function() {
                loadRevenueChart(yearSelect.value, monthSelect.value);
            });
            
            // Load on select change
            yearSelect.addEventListener('change', function() {
                loadRevenueChart(yearSelect.value, monthSelect.value);
            });
            
            monthSelect.addEventListener('change', function() {
                loadRevenueChart(yearSelect.value, monthSelect.value);
            });
        });
    </script>
}
