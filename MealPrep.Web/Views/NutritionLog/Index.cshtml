@model List<MealPrep.DAL.Entities.NutritionLog>

@{
    ViewData["Title"] = "Nhật Ký Dinh Dưỡng";
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">Theo Dõi Dinh Dưỡng</h1>
            <p class="text-muted mb-0">Ghi lại và theo dõi dinh dưỡng hàng ngày</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Thêm Nhật Ký
        </a>
    </div>

    <!-- Quick Actions -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <a asp-action="Summary" asp-route-from="@DateOnly.FromDateTime(DateTime.Today.AddDays(-7))" 
               asp-route-to="@DateOnly.FromDateTime(DateTime.Today)" 
               class="card app-card text-center h-100 text-decoration-none">
                <div class="card-body">
                    <i class="bi bi-calendar-week text-primary" style="font-size: 2rem;"></i>
                    <h6 class="mt-2 mb-0">Tổng Kết Tuần</h6>
                    <small class="text-muted">7 ngày qua</small>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="Summary" asp-route-from="@DateOnly.FromDateTime(DateTime.Today.AddDays(-30))" 
               asp-route-to="@DateOnly.FromDateTime(DateTime.Today)" 
               class="card app-card text-center h-100 text-decoration-none">
                <div class="card-body">
                    <i class="bi bi-calendar-month text-success" style="font-size: 2rem;"></i>
                    <h6 class="mt-2 mb-0">Tổng Kết Tháng</h6>
                    <small class="text-muted">30 ngày qua</small>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Meal" asp-action="Index" 
               class="card app-card text-center h-100 text-decoration-none">
                <div class="card-body">
                    <i class="bi bi-egg-fried text-warning" style="font-size: 2rem;"></i>
                    <h6 class="mt-2 mb-0">Xem Món Ăn</h6>
                    <small class="text-muted">Danh sách món ăn</small>
                </div>
            </a>
        </div>
    </div>

    <!-- Today's Summary Card -->
    @{
        var todayLogs = Model.Where(l => l.Date == DateOnly.FromDateTime(DateTime.Today)).ToList();
        var todayCalories = todayLogs.Sum(l => (l.Meal?.Calories ?? 0) * l.Quantity);
        var todayProtein = todayLogs.Sum(l => (l.Meal?.Protein ?? 0) * l.Quantity);
        var todayCarbs = todayLogs.Sum(l => (l.Meal?.Carbs ?? 0) * l.Quantity);
        var todayFat = todayLogs.Sum(l => (l.Meal?.Fat ?? 0) * l.Quantity);
    }

    <div class="card app-card mb-4">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
                <i class="bi bi-calendar-day text-primary"></i> Dinh Dưỡng Hôm Nay
                <small class="text-muted">@DateTime.Today.ToString("dd/MM/yyyy - dddd")</small>
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-6 col-md-3">
                    <div class="text-center">
                        <div class="h3 mb-1 text-danger">@todayCalories</div>
                        <small class="text-muted">Calo</small>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="text-center">
                        <div class="h3 mb-1 text-primary">@todayProtein g</div>
                        <small class="text-muted">Đạm</small>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="text-center">
                        <div class="h3 mb-1 text-warning">@todayCarbs g</div>
                        <small class="text-muted">Carbs</small>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="text-center">
                        <div class="h3 mb-1 text-info">@todayFat g</div>
                        <small class="text-muted">Chất Béo</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Logs -->
    @if(Model.Any())
    {
        <div class="card app-card">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Nhật Ký Gần Đây
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Ngày</th>
                                <th>Món Ăn</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Calo</th>
                                <th class="text-end">Đạm</th>
                                <th class="text-end">Carbs</th>
                                <th class="text-end">Chất Béo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.OrderByDescending(l => l.Date).ThenByDescending(l => l.Id))
                            {
                                <tr>
                                    <td>
                                        <strong>@log.Date.ToString("MMM dd")</strong>
                                        <div class="small text-muted">@log.Date.DayOfWeek</div>
                                    </td>
                                    <td>
                                        @if(log.Meal != null)
                                        {
                                            <div>@log.Meal.Name</div>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Món ăn không còn</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">×@log.Quantity</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="badge bg-danger-subtle text-danger">
                                            @((log.Meal?.Calories ?? 0) * log.Quantity) kcal
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <span class="text-primary">@((log.Meal?.Protein ?? 0) * log.Quantity) g</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="text-warning">@((log.Meal?.Carbs ?? 0) * log.Quantity) g</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="text-info">@((log.Meal?.Fat ?? 0) * log.Quantity) g</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        @* Empty State *@
        <div class="card app-card text-center py-5">
            <div class="card-body">
                <i class="bi bi-journal-text text-muted" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Chưa có nhật ký dinh dưỡng</h4>
                <p class="text-muted mb-4">Bắt đầu ghi lại bữa ăn để theo dõi dinh dưỡng nạp vào</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Thêm Nhật Ký Đầu Tiên
                </a>
            </div>
        </div>
    }
</div>