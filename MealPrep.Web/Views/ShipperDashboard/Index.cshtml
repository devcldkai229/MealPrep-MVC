@{
    ViewData["Title"] = "Dashboard Shipper";
    Layout = "_Layout";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Dashboard Shipper</h1>
            <p class="text-muted mb-0">
                <i class="bi bi-calendar3 me-1"></i>
                Ngày: @ViewBag.Today.ToString("dd/MM/yyyy")
            </p>
        </div>
        <a asp-controller="ShipperDelivery" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-truck me-2"></i>Xem Đơn Hàng
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="app-card p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="kpi-title mb-1">Tổng Đơn Hàng</div>
                        <div class="kpi-value text-primary">@ViewBag.TotalOrders</div>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-clipboard-check text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="app-card p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="kpi-title mb-1">Đang Chờ Giao</div>
                        <div class="kpi-value text-warning">@ViewBag.PendingOrders</div>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-clock-history text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="app-card p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="kpi-title mb-1">Đã Giao</div>
                        <div class="kpi-value text-success">@ViewBag.DeliveredOrders</div>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-check-circle text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="app-card p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="kpi-title mb-1">Tỷ Lệ Hoàn Thành</div>
                        <div class="kpi-value text-info">
                            @if (ViewBag.TotalOrders > 0)
                            {
                                @((int)((ViewBag.DeliveredOrders / (double)ViewBag.TotalOrders) * 100))<span class="fs-6">%</span>
                            }
                            else
                            {
                                <span>0%</span>
                            }
                        </div>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-graph-up text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="app-card p-4">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-truck text-primary me-2"></i>
                    Quản Lý Đơn Hàng
                </h5>
                <p class="text-muted mb-3">Xem và quản lý các đơn hàng cần giao hôm nay</p>
                <a asp-controller="ShipperDelivery" asp-action="Index" class="btn btn-primary w-100">
                    <i class="bi bi-arrow-right me-2"></i>Xem Đơn Hàng
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="app-card p-4">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-camera text-success me-2"></i>
                    Upload Bằng Chứng
                </h5>
                <p class="text-muted mb-3">Chụp và upload ảnh bằng chứng giao hàng cho từng món ăn</p>
                <a asp-controller="ShipperDelivery" asp-action="Index" class="btn btn-success w-100">
                    <i class="bi bi-camera-fill me-2"></i>Bắt Đầu Giao Hàng
                </a>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="app-card p-4 mt-4">
        <h5 class="fw-bold mb-3">
            <i class="bi bi-activity text-primary me-2"></i>
            Thống Kê Hôm Nay
        </h5>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="d-flex align-items-center gap-3 p-3 bg-light rounded">
                    <div class="bg-primary bg-opacity-10 p-2 rounded">
                        <i class="bi bi-box-seam text-primary"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-semibold">Tổng Số Món</div>
                        <div class="text-muted small">@ViewBag.TotalItems món cần giao</div>
                    </div>
                    <div class="fw-bold text-primary">@ViewBag.TotalItems</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex align-items-center gap-3 p-3 bg-light rounded">
                    <div class="bg-success bg-opacity-10 p-2 rounded">
                        <i class="bi bi-check-circle text-success"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-semibold">Đã Giao</div>
                        <div class="text-muted small">@ViewBag.DeliveredItems món đã hoàn thành</div>
                    </div>
                    <div class="fw-bold text-success">@ViewBag.DeliveredItems</div>
                </div>
            </div>
        </div>
    </div>
</div>
