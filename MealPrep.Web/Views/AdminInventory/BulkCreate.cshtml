@{
    ViewData["Title"] = "Tạo Giới Hạn Kho Hàng Loạt";
    Layout = "_AdminLayout";
    var meals = ViewBag.Meals as SelectList;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="app-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h3 class="fw-bold mb-1">Tạo Giới Hạn Kho Hàng Loạt</h3>
                        <p class="text-muted mb-0">Thiết lập giới hạn cho nhiều món ăn và nhiều ngày cùng lúc</p>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay Lại
                    </a>
                </div>

                <form asp-action="BulkCreate" method="post" id="bulkCreateForm">
                    @Html.AntiForgeryToken()
                    
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="startDate" class="form-label fw-semibold">Ngày Bắt Đầu <span class="text-danger">*</span></label>
                            <input type="date" name="startDate" id="startDate" value="@ViewBag.StartDate.ToString("yyyy-MM-dd")" class="form-control" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="endDate" class="form-label fw-semibold">Ngày Kết Thúc <span class="text-danger">*</span></label>
                            <input type="date" name="endDate" id="endDate" value="@ViewBag.EndDate.ToString("yyyy-MM-dd")" class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Chọn Món Ăn <span class="text-danger">*</span></label>
                        <div class="app-card p-3" style="max-height: 400px; overflow-y: auto; border: 1px solid #E5E7EB;">
                            <div class="mb-3 d-flex align-items-center gap-2">
                                <button type="button" class="btn btn-sm btn-outline-primary" id="selectAllBtn" onclick="selectAllMeals()">
                                    <i class="bi bi-check-square"></i> Chọn Tất Cả
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="deselectAllBtn" onclick="deselectAllMeals()">
                                    <i class="bi bi-square"></i> Bỏ Chọn Tất Cả
                                </button>
                                <span class="ms-3 text-muted small" id="selectedCount">Đã chọn: 0 món</span>
                            </div>
                            <div class="row g-2">
                                @if (meals != null && meals.Any())
                                {
                                    @foreach (var item in meals)
                                    {
                                        <div class="col-md-6 col-lg-4">
                                            <div class="form-check p-2 border rounded hover-shadow" style="transition: all 0.2s; cursor: pointer;" onclick="document.getElementById('meal_@item.Value').click()">
                                                <input class="form-check-input meal-checkbox" 
                                                       type="checkbox" 
                                                       name="mealIds" 
                                                       value="@item.Value" 
                                                       id="meal_@item.Value"
                                                       onchange="updateSelectedCount()"
                                                       onclick="event.stopPropagation()">
                                                <label class="form-check-label w-100" for="meal_@item.Value" style="cursor: pointer;">
                                                    <div class="fw-semibold">@item.Text</div>
                                                </label>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12">
                                        <p class="text-muted text-center py-3">Không có món ăn nào.</p>
                                    </div>
                                }
                            </div>
                        </div>
                        <small class="text-muted">Chọn một hoặc nhiều món ăn để tạo giới hạn kho</small>
                    </div>

                    <div class="mb-3">
                        <label for="quantityLimit" class="form-label fw-semibold">Giới Hạn Số Lượng <span class="text-danger">*</span></label>
                        <input type="number" name="quantityLimit" id="quantityLimit" min="1" max="10000" class="form-control" required />
                        <small class="text-muted">Số lượng suất tối đa cho mỗi món ăn trong mỗi ngày đã chọn</small>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Lưu ý:</strong> 
                        <ul class="mb-0 mt-2">
                            <li>Nếu đã có giới hạn kho cho món này trong các ngày đã chọn, hệ thống sẽ cập nhật thay vì tạo mới.</li>
                            <li>Bạn có thể chọn nhiều món ăn cùng lúc để tạo giới hạn cho tất cả.</li>
                            <li>Giới hạn số lượng sẽ áp dụng cho tất cả các món đã chọn.</li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Hủy
                        </a>
                        <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                            <i class="bi bi-check-lg"></i> Tạo Hàng Loạt
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-shadow:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-color: #0B1220 !important;
        }
        .form-check-input:checked ~ .form-check-label {
            color: #0B1220;
        }
    </style>
    <script>
        // Auto-calculate end date when start date changes (default 7 days)
        document.getElementById('startDate').addEventListener('change', function() {
            const startDate = new Date(this.value);
            if (startDate && !document.getElementById('endDate').value) {
                const endDate = new Date(startDate);
                endDate.setDate(endDate.getDate() + 6); // 7 days total
                document.getElementById('endDate').value = endDate.toISOString().split('T')[0];
            }
        });

        // Update selected count
        function updateSelectedCount() {
            const checkboxes = document.querySelectorAll('.meal-checkbox:checked');
            const count = checkboxes.length;
            document.getElementById('selectedCount').textContent = `Đã chọn: ${count} món`;
            document.getElementById('submitBtn').disabled = count === 0;
            
            // Update button text
            if (count > 0) {
                document.getElementById('submitBtn').innerHTML = `<i class="bi bi-check-lg"></i> Tạo Hàng Loạt (${count} món)`;
            } else {
                document.getElementById('submitBtn').innerHTML = `<i class="bi bi-check-lg"></i> Tạo Hàng Loạt`;
            }
        }

        // Select all meals
        function selectAllMeals() {
            document.querySelectorAll('.meal-checkbox').forEach(cb => {
                cb.checked = true;
            });
            updateSelectedCount();
        }

        // Deselect all meals
        function deselectAllMeals() {
            document.querySelectorAll('.meal-checkbox').forEach(cb => {
                cb.checked = false;
            });
            updateSelectedCount();
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateSelectedCount();
        });

        // Form validation
        document.getElementById('bulkCreateForm').addEventListener('submit', function(e) {
            const checked = document.querySelectorAll('.meal-checkbox:checked');
            if (checked.length === 0) {
                e.preventDefault();
                alert('Vui lòng chọn ít nhất một món ăn!');
                return false;
            }
        });
    </script>
}
