            BusinessObjects.Enums.ActivityLevel.LightlyActive => "V?n d?ng nh?",
            BusinessObjects.Enums.ActivityLevel.ModeratelyActive => "V?n d?ng v?a",
            BusinessObjects.Enums.ActivityLevel.VeryActive => "V?n d?ng nhi?u",
            BusinessObjects.Enums.ActivityLevel.ExtraActive => "V?n d?ng c?c nhi?u",
            _ => level.ToString()
        };
    }

    string GetActivityLevelDescription(BusinessObjects.Enums.ActivityLevel level)
    {
        return level switch
        {
            BusinessObjects.Enums.ActivityLevel.Sedentary => "Ng?i nhi?u, ít ho?t d?ng",
            BusinessObjects.Enums.ActivityLevel.LightlyActive => "1-3 ngày/tu?n",
            BusinessObjects.Enums.ActivityLevel.ModeratelyActive => "3-5 ngày/tu?n",
