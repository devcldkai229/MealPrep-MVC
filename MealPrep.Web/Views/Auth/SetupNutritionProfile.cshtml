                                <span asp-validation-for="MealsPerDay" class="text-danger small"></span>
                                <div class="form-text">S? b?a an m?i ngày (1-6 b?a)</div>
                            </div>

                            <!-- Calories In Day -->
                            <div class="col-12">
                                <h6 class="text-primary mb-3 mt-3">
                                    <i class="bi bi-fire"></i> M?c tiêu Calories
                                </h6>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CaloriesInDay" class="form-label fw-semibold">
                                    @Html.DisplayNameFor(m => m.CaloriesInDay)
                                </label>
                                <div class="input-group">
                                    <input asp-for="CaloriesInDay" type="number" class="form-control form-control-lg"
                                           placeholder="Ví d?: 2000" min="1000" max="5000" />
                                    <span class="input-group-text">kcal</span>
                                </div>
