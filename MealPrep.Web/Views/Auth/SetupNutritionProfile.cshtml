            BusinessObjects.Enums.FitnessGoal.FatLoss => "Gi?m m? th?a",
            BusinessObjects.Enums.FitnessGoal.MuscleGain => "Tang kh?i co",
            _ => ""
        };
    }

    string GetActivityLevelText(BusinessObjects.Enums.ActivityLevel level)
    {
