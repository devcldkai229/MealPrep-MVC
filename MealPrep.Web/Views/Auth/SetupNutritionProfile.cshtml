            BusinessObjects.Enums.DietPreference.Vegan => "Thu?n chay",
            BusinessObjects.Enums.DietPreference.Vegetarian => "An chay",
            BusinessObjects.Enums.DietPreference.LowCarb => "Gi?m tinh b?t",
            BusinessObjects.Enums.DietPreference.Keto => "Keto",
