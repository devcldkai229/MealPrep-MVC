</div>

@functions {
    string GetGoalIcon(BusinessObjects.Enums.FitnessGoal goal)
    {
        return goal switch
        {
            BusinessObjects.Enums.FitnessGoal.Maintain => "bi-dash-circle",
            BusinessObjects.Enums.FitnessGoal.FatLoss => "bi-arrow-down-circle",
            BusinessObjects.Enums.FitnessGoal.MuscleGain => "bi-arrow-up-circle",
            _ => "bi-circle"
        };
    }

    string GetGoalText(BusinessObjects.Enums.FitnessGoal goal)
    {
        return goal switch
        {
            BusinessObjects.Enums.FitnessGoal.Maintain => "Duy trì",
            BusinessObjects.Enums.FitnessGoal.FatLoss => "Gi?m cân",
            BusinessObjects.Enums.FitnessGoal.MuscleGain => "Tang co",
            _ => goal.ToString()
        };
    }

    string GetGoalDescription(BusinessObjects.Enums.FitnessGoal goal)
